{% extends 'layout.html.twig' %}

{% block content %}

    {% if bookmarks is not defined or bookmarks|length <= 0 %}
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                {% if page > 1 %}
                    <h3>No more bookmarks.</h3>
                {% else %}
                    <h3>No bookmarks.</h3>
                {% endif %}
            </div>
            <div class="col-md-2"></div>
        </div>
    {% else %}
        {% for bookmark in bookmarks %}
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    {% include 'Bookmark/bookmark.html.twig' with {bookmark: bookmark} %} 
                </div>
                <div class="col-md-2"></div>
            </div>
        {% endfor %}
    {% endif %}


    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <a href="{{ previousUrl }}">
                <button class="btn btn-success" type="button">Previous</button>
            </a>
            <a href="{{ nextUrl }}">
                <button class="btn btn-primary" type="button">Next</button>
            </a>
        </div>
        <div class="col-md-2"></div>
    </div>

{% endblock %}
